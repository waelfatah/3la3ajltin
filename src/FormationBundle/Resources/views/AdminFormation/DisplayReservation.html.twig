{% block body %}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Liste des reservations</h3>
            </div>
            <div class="table-responsive">
                <table id="example" class="table align-items-center table-flush second" style="width:100%">
                    <tr>
                        <th>Name Formation</th>
                        <th>User</th>
                        <th>Nb places</th>
                        <th>Date Reservation</th>
                        <th>Etat</th>
                        <th>Actions</th>

                    </tr>
                    <tr>

                        {% for r in reservations %}

                        <td>{{ r.nom }}</td>
                        <td>{{ r.username }}</td>
                        <td>{{ r.nbr }} </td>
                        <td>{{ r.date |date("m/d/Y") }}</td>
                        <td>{{ r.etat }} </td>



                        <td>
                            {% if r.etat=="en cours" %}
                                <div class="btn-group btn-group-sm btn-group-horizontal">
                        <td class="product-remove">
                                       <a href="{{ path('confirmer_reservation', { 'id': r.rid }) }}" class="btn btn-outline-primary">
                                           <i class="fa fa-pencil" aria-hidden="true"></i>Confirmer</a>
                        </td>
                        <td class="product-remove">
                            <a href="{{ path('rejeter_reservation', { 'id': r.rid }) }}" class="btn btn-outline-primary">
                                <i class="fa fa-pencil" aria-hidden="true"></i>Rejeter</a>
                        </td>

                            {% endif %}
                        {{ mgilet_notification_render(app.user) }}
                        </td>
                    </tr>
                      {% endfor %}

