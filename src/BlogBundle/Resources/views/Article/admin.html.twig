{% block body %}
    <div class="card shadow">
        <div class="card-header border-0">
            <center>  <h3 class="mb-0"> Liste des articles</h3> </center>

        </div>
        <div class="table-responsive">
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Date</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Demandes</th>
                </tr>


                </thead>
                <tbody>


                    {% for a in article %}
                <tr>
                    <td>{{ a.titre }}</td>
                    <td>{{ a.description }}</td>
                    <td>{{ a.auteur }}</td>
                    <td>{{ a.date  |date("m/d/Y") }}</td>
                    <td>{{ a.etat   }}</td>

                    <td>
                    <div class="btn-group btn-group-sm btn-group-horizontal">
                        <a class="btn btn-secondary"
                           href="{{ path('Adminmodif_homepage', { 'id': a.idarticle }) }}"
                           data-toggle="tooltip" title="Modifier">
                            <i class="fal fa-wrench"></i>

                        </a>
                    </div>


                    <div class="btn-group btn-group-sm btn-group-horizontal">
                        <a class="btn btn-secondary"
                           href="{{ path('Adminsup_homepage', { 'id': a.idarticle }) }}"
                           data-toggle="tooltip" title="Supprimer">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                     </td>
                    <td>

                    {% if a.etat=="En cours" %}

                        <div class="btn-group btn-group-sm btn-group-horizontal">
                            <a class="btn btn-success"
                               href="{{ path('confirmer_Article', { 'id': a.idarticle }) }}"
                               data-toggle="tooltip" title="Rejeter">
                                <i class="fa fa-check" aria-hidden="true"></i>Confirmer
                            </a>
                        </div>


                       <div class="btn-group btn-group-sm btn-group-horizontal">
                            <a class="btn btn-secondary"
                               href="{{ path('rejeter_Article', { 'id': a.idarticle }) }}"
                               data-toggle="tooltip" title="Rejeter">
                                <i class="fa fa-undo" aria-hidden="true"></i>Rejeter
                            </a>
                        </div>

                    {% endif %}
                    </td>


                </tr>
                {% endfor%}
                </tbody>
            </table>
        </div>
        <div class="card-footer py-4">
            <nav aria-label="...">
                <ul class="pagination justify-content-end mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">
                            <i class="fas fa-angle-left"></i>
                            <span class="sr-only"></span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2 <span class="sr-only"></span></a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#"></a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            <i class="fas fa-angle-right"></i>
                            <span class="sr-only"></span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

