{% extends 'Front/front.html.twig' %}

{% block body %}

    <div class="cy_bread_wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <h1>Modification d'un article</h1>

                </div>
            </div>
        </div>
    </div>

    <div class="cy_form_wrapper">
        <div class="container">
            <div class="row">

                <div class="cy_form padder_top50">
                    {{ form_start(form) }}
                    <table>
                        <tr>
                            <td>Titre:</td><td>{{ form_widget(form.titre) }}</td>
                        </tr>
                        <tr>
                            <td>Description:</td><td>{{ form_widget(form.description) }}</td>
                        </tr>

                        <td>
                            {{ form_widget(form.ajouter) }}
                        </td>
                        </tr>
                    </table>


                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}