{% extends 'Front/frontbase.html.twig' %}



{% block body %}

    <div class="cy_shop_wrapper">

        <div class="container" >
            <h1 class="cy_heading">les offres</h1>
            <div class="row" >
                <div class="col-lg-8 col-md-12 push-lg-4">
                    <div class="cy_shop_page" id="products">

                        <div class="row" id="myTable"  >
                            {%  for list in list %}
                                <div class="col-lg-6 col-md-6 item">
                                    <div class="cy_store_box">
                                        <a href="{{ path('offre_show_detail',{('id'):list.idoffre}) }}" >
                                            <img src="http:\\localhost\3la3ajltin\web\Uploads\offre\{{ list.image}}" height="370px" width="300px"alt="store" class="img-fluid">
                                        </a>
                                        <div class="cy_store_data" >
                                            <div class="cy_store_text">
                                                <h3  >{{ list.titre }}</a></h3>

                                                <a href="{{ path('offre_show_detail',{('id'):list.idoffre}) }}" class="cy_button"><span>consulter</span></a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 pull-lg-8">
                    <div class="cy_shop_sidebar">
                        <div class="widget woocommerce widget_product_search">
                            <form class="search-form">
                                <div class="input-group">
                                    <input type="text" id="myInput" value="" class="form-control" placeholder="Rechercher">

                                </div>
                            </form>
                        </div>
                    </div>
                    <a href="{{ path('offre_add') }}" class="cy_button">ajouter offre</a>
                </div>
                <div class="text-center">{{ knp_pagination_render(list) }}</div>


            </div>


        </div>
    </div>





{% endblock %}

{% block scripts %}
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable div").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="http://cdn.jsdelivr.net/jquery.validation/1.14.0/jquery.validate.min.js"></script>

{% endblock %}
