{% extends 'Front/frontbase.html.twig'%}

{% block head %}

{% endblock %}
{% block menu %} {% endblock %}

{% form_theme Form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="cy_top_wrapper">
        <div class="cy_top_info">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="cy_top_detail">
                            <ul>
                                <li>
                                    EMAIL: {{ app.user.email }}
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_profile_show') }}"> {{ app.user.username }} </a>
                                </li>
                                <li>
                                    <ul>
                                        <a href="{{  path('fos_user_security_logout')}}">Se deconnecter</a>
                                    </ul>
                                </li>
                                <li class="cart"><a href="#"><i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="cart"><a href="{{ path('fos_message_inbox') }}"><i class="fa fa-inbox" aria-hidden="true"></i>
                                    </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<br><br><br><br>
<div class="cy_form_wrapper">
            <div class="container">
                <div class="row">
                    {{ form_start(Form) }}
                    <div class="col-lg-6 col-md-12">
                        <h1 class="cy_heading">ajouter votre offre</h1>
                        <div class="cy_form padder_top50">
                                <div class="row">
                                    <div class="col-lg-7 col-md-6 padder_left">
                                        <div class="form-group">
                                            {{ form_row(Form.titre, {'attr':{'class':'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 padder_left padder_right">
                                        <div class="form-group">
                                            {{ form_row(Form.description, {'attr':{'class':'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 padder_left padder_right">
                                        <div class="form-group">
                                            {{ form_row(Form.emplacement, {'attr':{'class':'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 padder_left padder_right">
                                        <div class="form-group">
                                            {{ form_row(Form.prix, {'attr':{'class':'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 padder_left padder_right">
                                        <div class="form-group">
                                            {{ form_row(Form.imageFile) }}
                                        </div>
                                    </div>
                                    <div class="response"></div>
                                    <div class="col-lg-12 col-md-12 padder_left padder_right">
                                        <input type="hidden" name ="form_type" value="contact">

                                        <a href="{{ path('offre_showby' , {('id'):app.user.id}) }}"> <button type="submit" class="cy_button submitForm">Submit</button>
                                    </div>
                                </div>

                        </div>
                    </div>
                    {{ form_end(Form) }}
                    <br>

{% endblock %}

{% block scripts %}
{% endblock %}